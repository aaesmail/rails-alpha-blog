<% if @category.errors.any? %>
  <h2 class="error">
    The following errors prevented the category from being saved
  </h2>

  <ul>
    <% @category.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @category, local: true) do |f| %>
  <p>
    <%= f.label :name %>
    <br />

    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
